<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProgressDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustPan|stateAlwaysHidden</item>
    </style>

    <style name="EditTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="fontWeight">400</item>
        <item name="hintTextColor">@color/dark_gray</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="NormalTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="fontWeight">400</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MediumTextStyle" parent="TextAppearance.AppCompat.Subhead">
        <item name="fontWeight">400</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SmallTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="fontWeight">400</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BoldTextStyle" parent="TextAppearance.AppCompat.Large">
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LargeBoldTextStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="fontWeight">700</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">48dp</item>
    </style>
</resources>